package com.wenfeng.fivecmps;

import android.annotation.TargetApi;
import android.content.Context;
import android.media.MediaPlayer;
import android.media.MediaPlayer.OnCompletionListener;
import android.os.Build;
import android.view.SurfaceHolder;

@TargetApi(Build.VERSION_CODES.JELLY_BEAN)
public class AudioPlayer {
	private MediaPlayer mPlayer;
	
	public void stop() {
		if(mPlayer != null) {
			mPlayer.release();
			mPlayer = null;
		}
	}
	
	public void play(Context context, SurfaceHolder sh) {
		stop();
		
		mPlayer = MediaPlayer.create(context, R.raw.five_centimeters_per_second_ending_song);
		mPlayer.setVideoScalingMode(MediaPlayer.VIDEO_SCALING_MODE_SCALE_TO_FIT);
		mPlayer.setDisplay(sh);
		mPlayer.setOnCompletionListener(new OnCompletionListener() {
			
			@Override
			public void onCompletion(MediaPlayer arg0) {
				stop();
			}
		});
		
		mPlayer.start();
	}
	
	public void pause() {
		mPlayer.pause();
	}
	
	public void continu() {
		mPlayer.start();
	}
}
